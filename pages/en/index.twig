{% extends "default.twig" %}
{% import "components.twig" as components %}

{% block title %}Welcome to STCMS{% endblock %}

{% block content %}
    <div class="bg-white shadow-md rounded-lg p-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Welcome to STCMS!</h1>
        <p class="text-gray-600 mb-6">
            This is the homepage of your new STCMS-powered website. You can start editing this content in <code>pages/en/index.twig</code>.
        </p>
        <div class="flex gap-4">
             {{ components.button(text='How It Works', url='/' ~ lang ~ '/how', variant='primary') }}
             {{ components.button(text='See Examples', url='/' ~ lang ~ '/examples', variant='secondary') }}
        </div>

        <hr class="my-8">

        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Interactive React Component</h2>
        <p class="text-gray-600 mb-4">
            Below is an interactive component rendered by React. The code for this is in <code>assets/js/components/Hello.jsx</code>.
        </p>
        
        <!-- React Component Mount Point -->
        <div id="hello-root" class="mt-4 p-4 border rounded-lg bg-gray-50"></div>
    </div>
{% endblock %}